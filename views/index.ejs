<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
<script>
       var newinfo = 0;          
   function yhandler (){
   
                var ourRequest = new XMLHttpRequest();
                ourRequest.open('GET', 'https://api.github.com/users');
                var wrap = document.querySelector('#wrap');
                var contentHeight = wrap.offsetHeight;//gets page content height
                var yOffset = window.pageYOffset;//gets the vertica scroll positionn
                var y = yOffset + window.innerHeight;
                if(y>= contentHeight){
                    
                    //ajax call
                    ourRequest.onload = function() {
                    if (ourRequest.status >= 200 && ourRequest.status < 400) {
                    var ourData = JSON.parse(ourRequest.responseText);
                    renderHTML(ourData);
                   
                    console.log(ourData)
                    } else {
                    console.log("We connected to the server, but it returned an error.");
                    }
                    
                };

            }
                

                    ourRequest.send();
                    
                    //AJAX call

                    
                    function renderHTML(data) {
                    var htmlString = "";
                    htmlString += '<div class ="newData">'+ '<p>' + data[newinfo].login +'<img src ='+data[newinfo].avatar_url+'>'+'</p>'+'</div>';
                    newinfo++;
                    wrap.insertAdjacentHTML('beforeend', htmlString);
    
                }

              
            }
            window.onscroll = yhandler
  </script>
    <style>
        #wrap{
          width: 800px;
          margin: 0px auto;
          background: greenyellow;
        }
         .newData{
             height: 800px;
             background: grey;
             margin: 10px 0px;
         }
    </style>
</head>
<body>
    
    <div id="status">0|0</div>
    <div id="wrap">
        <h1>Hello</h1>
